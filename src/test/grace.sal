;; changing a global setting
send "fms:setting", verbose: 2

;; defining a part 
send "fms:part", id: "mypart", inst: {:id "myinst" :template "piano"}

send "fms:clearscore"
send "fms:newscore"
send "fms:deletescore"

define process test()
  run repeat 20
    send "fms:note", dur: 1/2, pitch: between(40, 80), marks: pick({"."}, {})
    wait 1/2
  end

sprout test(), "/tmp/out.ly", :run, :clear, parts: {{:id "a part" :inst "piano"}}

sprout test(), "/tmp/out.ly"
